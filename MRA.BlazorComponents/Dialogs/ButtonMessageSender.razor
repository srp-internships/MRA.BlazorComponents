@inject IDialogService DialogService
<MudButton Variant="Variant.Filled" OnClick="@(() => OpenDialog())">
	<MudIcon Icon="@Icons.Material.Filled.Message" />
</MudButton>

@code {
	[Parameter] public required string DefaultPhoneNumber { get; set; }
	private readonly DialogOptions _options = new()
	{
		CloseButton = true,
		MaxWidth = MaxWidth.ExtraExtraLarge,
		FullWidth = true
	};

	private void OpenDialog()
	{
		var parameters = new DialogParameters { { "DefaultPhoneNumber", DefaultPhoneNumber } };
		DialogService.Show<DialogMessageSender>("Send message", parameters, _options);
	}
}
